# --- Routing/Geocode (เลือกหนึ่ง) ---
# ใช้ OpenRouteService:
GOOGLE_API_KEY= YOUR GOOGLE API KEY 
GOOGLE_REGION=th
GOOGLE_LANGUAGE=th
USE_REAL_ROUTE=1

# === Pricing ===
HANDLING_PER_CBM=5
STORAGE_PER_CBM_DAY=0.8
KM_COST=10
MIN_MARGIN=0.05
SURCHARGE=0

# === Scoring weights ===
W_PROFIT=0.6
W_UTILBAL=0.2
W_DISTANCE=0.1
W_SLA=0.05
W_PRICE=0.05
TARGET_UTIL=0.7

# ต้นทุนโอกาส & surge
OPPORTUNITY_COEFF=0.15
SURGE_K=0.0

OPENAI_API_KEY= YOUR OPENAI API KEY
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-5
DECISION_THRESHOLD=0.6

LLM_PROVIDER=openai
LLM_MODEL=gpt-5   # หรือ gpt-5 ตามที่ใช้จริง
LLM_API=responses         # (แนะนำสำหรับ gpt-5*)
LLM_TEMPERATURE=0.2
# เปิด JSON mode เป็นกรณี ๆ ไปในโค้ด (call_llm_json) ไม่ต้องตั้งก็ได้
# LLM_JSON_MODE=1


# เปิดโหมดแข่งขันภายใน (auction)
INTERNAL_AUCTION=1
AUCTION_TYPE=second_price
BID_UTIL_K=1.0
BID_KM_K=0.02
BID_JITTER=0.005

DB_BACKEND=mongo
MONGO_URI=mongodb+srv://<username>_db_user:isO<youpassword>@cluster-name.wxxxxxxx.mongodb.net/wms?retryWrites=true&w=majority
MONGO_DB=wms
MONGO_WAREHOUSE_COLL=warehouses


# history knobs
HISTORY_DAYS=14
ALPHA_MARGIN=0.10
BETA_AR=0.05

# Diversity / Exploration / Spec
COOLDOWN_LOOKBACK=100
COOLDOWN_GAMMA=0.1
COOLDOWN_CAP=10
EPSILON=0.15
EXPL_TOPK=3
EXPL_WEIGHT=distance*avail
W_SPEC=0.05

# Specialization match
SPEC_MATCH_FULL=1.0
SPEC_MATCH_PART=0.9
SPEC_MATCH_NONE=0.8


# --- จุดที่เราใช้ LLM ในโปรเจกต์ ---
USE_LLM_LOCATION=1
USE_LLM_PRICING=1
USE_LLM_WAREHOUSE=1
USE_LLM_EXPLAIN=1

